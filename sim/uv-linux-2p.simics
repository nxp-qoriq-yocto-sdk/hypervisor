#
# Script to run 8578/u-boot/ultravisor/linux on simulator
#

$use_uart1 = 1

$guest_image[0]  = "vmlinux.bin"
$guest_addr[0]   = 0x01000000
$initrd_image[0]  = "busybox-1.1.3"
$initrd_addr[0]   = 0x02300000

$guest_image[1]  = "vmlinux.bin"
$guest_addr[1]   = 0x21000000
$initrd_image[1]  = "busybox-1.1.3"
$initrd_addr[1]   = 0x22300000

$dtb_image  = "%script%/bin/mpc8578sim-hv-2p.dtb"

run-command-file "%script%/uvsim.include"                                                                 
