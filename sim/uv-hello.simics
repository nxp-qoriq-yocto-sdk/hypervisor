#
# Script to run 8578/u-boot/ultravisor/simple-guest on simulator
#

$use_uart1 = 1

# simple guest
$guest_image[0]  = "%script%/tests/bin/hello.bin"
$guest_addr[0]   = 0x01000000

$dtb_image  = "%script%/tests/bin/mpc8578sim-hv-test.dtb"

# indicate that simics magic instructions are wanted
$want_magic_inst = 1

# uncomment to attach uart2 to network port
#$use_uart2 = 0
#$use_uart2_net = 1

run-command-file "%script%/uvsim.include"
