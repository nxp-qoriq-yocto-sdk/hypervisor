#
# Script to run 8578/u-boot/ultravisor/simple-guest on simulator
#

$use_uart1 = 1

# simple guest
$guest_image[0]  = "gdebug"
$guest_addr[0]   = 0x00200000

$kernel_image  = "hv.uImage"

$dtb_image  = "hv.dtb"

# indicate that simics magic instructions are wanted
$want_magic_inst = 1

# uncomment to attach uart2 to network port
#$use_uart2 = 0
#$use_uart2_net = 1

add-directory "%script%/../sim" -prepend
add-directory "../bin" -prepend
add-directory "bin" -prepend
add-directory "bin/gdebug" -prepend

run-command-file "%script%/../common/hvsim.include"
