# UART0 is the hypervisor
# UART1 is byte-channel UART MUX
# UART2 is Linux partition 1
$use_uart1 = 1
$use_uart2 = 1
$use_uart3 = 0

$guest_image[0]  = "vmlinux.stripped"
$guest_addr[0]   = 0x00100000
$guest_image[1]  = "hv-2p.dtb"
$guest_addr[1]   = 0x00f00000
$guest_image[2]  = "rootfs.tiny.ext2.gz"
$guest_addr[2]   = 0x01000000

add-directory "%script%/../common" -prepend
run-command-file "common.simics"

$kernel_cmdline = "config-addr=0xfe8f00000"

add-directory "%script%" -prepend
add-directory "bin/linux" -prepend

run-command-file "boot.simics"
