/dts-v1/;

/ {
	compatible = "fsl,hv-config";

	// =====================================================
	// Physical Memory Areas
	// =====================================================
	pma0:pma0 {
		compatible = "phys-mem-area";
		addr = <0x0 0x00000000>;
		size = <0x0 0x20000000>;  // 512MB
	};

	pma1:pma1 {
		compatible = "phys-mem-area";
		addr = <0x0 0x20000000>;
		size = <0x0 0x20000000>;  // 512MB
	};

	pma2:pma2 {
		compatible = "phys-mem-area";
		addr = <0x0 0x40000000>;
		size = <0x0 0x20000000>;  // 512MB
	};

	pma3:pma3 {
		compatible = "phys-mem-area";
		addr = <0x0 0x60000000>;
		size = <0x0 0x10000000>;  // 256MB
	};

	pma4:pma4 {
		compatible = "phys-mem-area";
		addr = <0x0 0x70000000>;
		size = <0x0 0x00001000>;  // 4KB
	};

	pma5:pma5 {
		compatible = "phys-mem-area";
		addr = <0x0 0x70001000>;
		size = <0x0 0x00001000>;  // 4KB
	};

	images_pma: images_pma {    //boot from RAM
		compatible = "phys-mem-area";
		addr = <0x0 0x78000000>;
		size = <0x0 0x04000000>;
	};
	dma-windows {
		window0: window0 {
			compatible = "dma-window";
			guest-addr = <0 0x0>;
			size = <0 0x20000000>;
		};
		dw_dqrr_qportal0: window1 {	// DMA window for stash_dqrr for qman-portal0
			compatible = "dma-window";
			guest-addr = <0xf 0xf4200000>;
			size = <0 0x4000>;
		};
		dw_dqrr_qportal1: window2 {	// DMA window for stash_dqrr for qman-portal1
			compatible = "dma-window";
			guest-addr = <0xf 0xf4204000>;
			size = <0 0x4000>;
		};
	};

	// =====================================================
	// Hypervisor Config
	// =====================================================
	hv:hypervisor-config {
		compatible = "hv-config";
		stdout = <&hvbc>;
		sysreset-on-partition-stop;

		hvbc: byte-channel {
			compatible = "byte-channel";
			endpoint = <&uartmux>;
			mux-channel = <0>;
		};

		hv-memory {
			compatible = "hv-memory";
			phys-mem = <&pma3>;
		};

		uart0:serial0 {
			device = "serial0";
		};

		serial1:serial1 {
			device = "serial1";
		};

		serial2:serial2 {
			device = "serial2";
		};

		serial3:serial3 {
			device = "serial3";
		};

		mpic {
			device = "/soc/pic";
		};

		iommu {
			device = "/soc/iommu";
		};

		cpc {
			device = "/soc/l3-cache-controller";
		};

		corenet-law {
			device = "/soc/corenet-law";
		};

		corenet-cf {
			device = "/soc/corenet-cf";
		};

		guts {
			device = "/soc/global-utilities@e0000";
		};
	};

	uartmux: uartmux {
		compatible = "byte-channel-mux";
		endpoint = <&uart0>;
	};

	doorbells {
		dbell0: doorbell0 {
			compatible = "doorbell";
		};
	};

	// =====================================================
	// Partition 1
	// =====================================================
	part1 {
		compatible = "partition";
		label = "p1-linux";
		cpus = <0 2>;
		guest-image = <0xf 0xe8020000 0 0 0 0x00e00000>;
		//linux-rootfs = <0xf 0xe9300000 0 0x01300000 0 0x04000000>;
		//on hardware load rootfs from RAM
		linux-rootfs = <0x0 0x78000000 0 0x01300000 0 0x05A00000>;
		dtb-window = <0 0x1000000 0 0x10000>;
		no-dma-disable;

		aliases {
			stdout = <&console1>;
		};

		console1: console {
			compatible = "byte-channel";
			endpoint = <&uartmux>;
			mux-channel = <1>;
		};

		bc1: bc-p2 {
			compatible = "byte-channel";
			endpoint = <&bcp2>;
		};

		bc2: bc-p3 {
			compatible = "byte-channel";
			endpoint = <&bcp3>;
		};

		doorbell-in {
			compatible = "receive-doorbell";
			global-doorbell = <&dbell0>;
		};

		doorbell-out {
			compatible = "send-doorbell";
			global-doorbell = <&dbell0>;
		};

		gpma0 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&pma0>;
			guest-addr = <0 0>;
		};

		gpma1 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&pma4>;
			guest-addr = <0 0x20000000>;
			node-update {
				prepend-stringlist = "compatible", "fsl-shmem";
				/* We need to delete the "device_type" property
				   otherwise Linux will use the memory buffer
				   as regular memory. */
				delete-prop = "device_type";
			};
		};

		gpma2 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&pma5>;
			guest-addr = <0 0x20001000>;
			node-update {
				prepend-stringlist = "compatible", "fsl-deco";
				delete-prop = "device_type";
			};
		};

		qman {
			device = "qman";
			dma-window = <&window0>;
		};

		bman {
			device = "bman";
			dma-window = <&window0>;
		};

		bman-portalA {
			device = "/bman-portals/bman-portal@0";
			vcpu = <0>;
		};

		bman-portalB {
			device = "/bman-portals/bman-portal@4000";
			vcpu = <1>;
		};

		buffer-pool@0 {
			device = "/bman-portals/buffer-pool@0";
		};

		portal-devices {
			fman0 {
				device = "fman0";
				dma-window = <&window0>;
			};
			fman1 {
				device = "fman1";
				dma-window = <&window0>;
			};
			caam {
				device = "crypto";
				dma-window = <&window0>;
			};
			pme {
				device = "pme";
				dma-window = <&window0>;
			};
		};

		qman-portalA {
			device = "/qman-portals/qman-portal@0";
			vcpu = <0>;

			stash-mem {
				liodn-index = <1>;
				dma-window = <&window0>;
				operation-mapping = <0>;  // OMI_QMAN
				stash-dest = <1>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal0>;
				operation-mapping = <0>;  // OMI_QMAN
				stash-dest = <1>;
				snoop-cpu-only;
			};
		};

		qman-portalB {
			device = "/qman-portals/qman-portal@4000";
			vcpu = <1>;

			stash-mem {
				liodn-index = <1>;
				dma-window = <&window0>;
				operation-mapping = <0>;  // OMI_QMAN
				stash-dest = <1>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal1>;
				operation-mapping = <0>;  // OMI_QMAN
				stash-dest = <1>;
				snoop-cpu-only;
			};
		};

		qman-pool@1 {
			device = "/qman-portals/qman-pool@1";
		};

		qman-pool@2 {
			device = "/qman-portals/qman-pool@2";
		};

		qman-pool@3 {
			device = "/qman-portals/qman-pool@3";
		};

		qman-pool@4 {
			device = "/qman-portals/qman-pool@4";
		};

		qman-pool@5 {
			device = "/qman-portals/qman-pool@5";
		};

		qman-pool@6 {
			device = "/qman-portals/qman-pool@6";
		};

		qman-pool@7 {
			device = "/qman-portals/qman-pool@7";
		};

		qman-pool@8 {
			device = "/qman-portals/qman-pool@8";
		};

		qman-pool@9 {
			device = "/qman-portals/qman-pool@9";
		};

		qman-pool@10 {
			device = "/qman-portals/qman-pool@10";
		};

		qman-pool@11 {
			device = "/qman-portals/qman-pool@11";
		};

		qman-pool@12 {
			device = "/qman-portals/qman-pool@12";
		};

		qman-pool@13 {
			device = "/qman-portals/qman-pool@13";
		};

		qman-pool@14 {
			device = "/qman-portals/qman-pool@14";
		};

		qman-pool@15 {
			device = "/qman-portals/qman-pool@15";
		};

		// FMAN0 eth1 -- ethernet 1 assigned to this partition
		dpa-ethernet@1 {
			device = "/fsl,dpaa/ethernet@1";
		};

		// FMAN1 eth0 -- ethernet 5 assigned to this partition
		dpa-ethernet@5 {
			device = "/fsl,dpaa/ethernet@5";

		};
		gpio {
			device = "/soc/gpio";
		};

		flash {
			device = "/localbus";
		};

		fman0 {
			device = "fman0";
			dma-window = <&window0>;
		};

		fman1 {
			device = "fman1";
			dma-window = <&window0>;
		};


		p2-linux {
			compatible = "managed-partition";
			partition = <&part2>;
		};

		p3-linux {
			compatible = "managed-partition";
			partition = <&part3>;
		};
		node-update {
			chosen {
				bootargs = "ramdisk_size=344064";
			};
		};
	};

	// =====================================================
	// Partition 2
	// =====================================================
	part2:part2 {
		compatible = "partition";
		label = "p2-linux";
		cpus = <2 2>;
		dtb-window = <0 0x1000000 0 0x10000>;
		no-dma-disable;

		aliases {
			stdout = <&console2>;
		};

		console2: console {
			compatible = "byte-channel";
			endpoint = <&uartmux>;
			mux-channel = <2>;
		};

		bcp2: bc {
			compatible = "byte-channel";
			endpoint = <&bc1>;
		};

		doorbell-in {
			compatible = "receive-doorbell";
			global-doorbell = <&dbell0>;
		};

		doorbell-out {
			compatible = "send-doorbell";
			global-doorbell = <&dbell0>;
		};

		gpma0 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&pma1>;
			guest-addr = <0 0>;
		};

		gpma1 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&pma4>;
			guest-addr = <0 0x20000000>;
			node-update {
				prepend-stringlist = "compatible", "fsl-shmem";
				delete-prop = "device_type";
			};
		};

		gpma2 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&pma5>;
			guest-addr = <0 0x20001000>;
			node-update {
				prepend-stringlist = "compatible", "fsl-deco";
				delete-prop = "device_type";
			};
		};

	};

	// =====================================================
	// Partition 3
	// =====================================================
	part3:part3 {
		compatible = "partition";
		label = "p3-linux";
		cpus = <4 2>;
		dtb-window = <0 0x1000000 0 0x10000>;
		no-dma-disable;


		aliases {
			stdout = <&console3>;
		};

		console3: console {
			compatible = "byte-channel";
			endpoint = <&uartmux>;
			mux-channel = <3>;
		};

		bcp3: bc {
			compatible = "byte-channel";
		};

		doorbell-in {
			compatible = "receive-doorbell";
			global-doorbell = <&dbell0>;
		};

		doorbell-out {
			compatible = "send-doorbell";
			global-doorbell = <&dbell0>;
		};

		gpma0 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&pma2>;
			guest-addr = <0 0>;
		};

		gpma1 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&pma4>;
			guest-addr = <0 0x20000000>;
			node-update {
				prepend-stringlist = "compatible", "fsl-shmem";
				delete-prop = "device_type";
			};
		};

		gpma2 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&pma5>;
			guest-addr = <0 0x20001000>;
			node-update {
				prepend-stringlist = "compatible", "fsl-deco";
				delete-prop = "device_type";
			};
		};

	};
};
