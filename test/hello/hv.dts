/dts-v1/;

/ {
	compatible = "fsl,hv-config";

	hv: hv-config {
		compatible = "hv-config";
		stdout = <&serial0>;
		
		memory {
			compatible = "hv-memory";
			phys-mem = <&pma0>;
		};

		serial0: serial0 {
			device = "serial0";
		};

		mpic {
			device = "/soc/pic";
		};

		iommu {
			device = "/soc/iommu";
		};
	};

	phys-mem {
		pma0: pma0 {
			compatible = "phys-mem-area";
			addr = <0 0>;
			size = <0 0x1000000>;
		};
	};



