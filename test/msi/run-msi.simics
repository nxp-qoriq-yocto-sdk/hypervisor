# UART0 is the hypervisor
# UART1 is Linux manager partition
# UART2 is Linux managed partition 1
# UART3 is Linux managed partition 2
$use_uart2 = 1

#$create_fman = TRUE

# sym53c875 driver will run a selftest that is useful for testing PCI.
$pcie0_device = "sym53c875"
#$pcie0_device = "i82543gc"

$guest_image[0]  = "uImage.msi"
$guest_addr[0]   = 0x00100000
$guest_image[1]  = "hv-msi.dtb"
$guest_addr[1]   = 0x00f00000
$guest_image[2]  = "rootfs.ext2.gz"
$guest_addr[2]   = 0x01000000

#initrd_image  = "rootfs.ext2.gz.uboot"

add-directory "%script%/../common" -prepend
run-command-file "common.simics"

$kernel_cmdline = "config-addr=0xe8f00000"
$dev_tree_blob = "p4080sim.dtb"
$uboot = "u-boot.32.bin"

add-directory "%script%" -prepend
add-directory "bin/msi" -prepend

run-command-file "boot_4_2.simics"
add-directory "bin/linux" -prepend

# add dummy PCIe endpoint w/t MSI support
@SIM_create_object('pcie_msi', 'pcie-msi', [['pci_bus', conf.p4080_simple0.soc.pcie_bus[0]]])
@conf.p4080_simple0.soc.pcie_bus[0].pci_devices = [[0, 0, conf.pcie_msi]]
# hack to add capability feature to device config status, otherwise linux
# does not query capabiliities
pcie_msi->pci_config_status = 0x10

$system.soc.pamu[0].log-level 4
pcie_msi.log-level 4
