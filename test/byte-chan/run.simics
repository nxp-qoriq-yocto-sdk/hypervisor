#
# Script to run 8578/u-boot/ultravisor/simple-guest on simulator
#

# simple guest
$guest_image[0]  = "byte-chan"
$guest_addr[0]   = 0x00200000

$kernel_image  = "hv.uImage"
$dev_tree_blob  = "hv.dtb"

$use_uart2 = 1

# uncomment to attach uart2 to network port
#$use_uart2_net = 1

add-directory "%script%/../sim" -prepend
add-directory "%script%/../sim/images" -prepend
add-directory "../bin" -prepend
add-directory "bin" -prepend
add-directory "bin/byte-chan" -prepend

run-command-file "boot.simics"
