# UART0 is the hypervisor
# UART2 is guest serial console
$use_uart2 = 1
#$use_uart3 = 1
$use_uart1 = 1

$guest_image[0] = "csd"
$guest_addr[0]  = 0x00200000

$guest_image[1] = "csd"
$guest_addr[1]  = 0x00200000


$guest_image[2] = "hv.dtb"
$guest_addr[2]  = 0x00100000

add-directory "%script%/../common" -prepend
run-command-file "common.simics"

add-directory "%script%" -prepend
add-directory "bin/csd" -prepend

@os.system('rm csd.ckpt*')

run-command-file "boot_4_2.simics"
break 0
continue
continue
write-configuration csd.ckpt
restart-simics ../../test/csd/hybrid-csd.simics
