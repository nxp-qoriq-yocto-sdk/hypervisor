HOSTCC=gcc
HOSTCC_OPTS=-g -std=gnu99

HOSTCC_OPTS_C= -Wall -Wundef -Wstrict-prototypes -Wno-trigraphs -fno-strict-aliasing \
               -fno-common -O2 -I . -DGET_STR_SIZE_OPTIMIZATION

all: gcov-extract

gcov-extract: gcov-extract.c gcov-extract.h
	$(HOSTCC) $(HOSTCC_OPTS) $(HOSTCC_OPTS_C) -lpthread -o $@ $< -lgcov

clean:
	rm -f gcov-extract
